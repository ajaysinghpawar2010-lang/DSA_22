#include <iostream>
#include <bits/stdc++.h>
using namespace std;

std::vector<int> v= {7,1,5,3,6,2} ;

int MaxProfit (std::vector <int> &v){
    int profit = 0;
    for(int i=1;i<v.size()-1;i++){
      if(v[i]<v[i+1]){
          profit+=(v[i+1]-v[i]);
      }
    }
    return profit;
}




int main()
{

  int s= MaxProfit(v);
  std::cout << s << std::endl;
  return 0;

}
